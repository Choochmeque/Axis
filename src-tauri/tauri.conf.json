{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Axis",
  "version": "0.1.0",
  "identifier": "com.aurelen.axis",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Axis",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE5MEZEQjA2ODczRTZGMUIKUldRYmJ6NkhCdHNQcWJxcWlCN0YyRFNtcFloblI2QzhMaUhEb3lNYVZqaHdVSUhXYlQvQ2FmTE8K"
    }
  }
}
